<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/list_item_asset_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_name"
            android:textSize="14sp"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/list_item_asset_company_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

    <TextView
        android:id="@+id/list_item_asset_owned_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/owned_shares"
        android:textSize="14sp"
        android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/list_item_asset_owned_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorText"/>

    </LinearLayout>

</LinearLayout>